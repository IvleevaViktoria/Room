        <Label x:Name="LabelAllArea" Content="" HorizontalAlignment="Left" Margin="511,383,0,0" VerticalAlignment="Top" Width="141"/>
        <Button x:Name="ExitButton" Content="Выход" HorizontalAlignment="Left" Margin="679,10,0,0" VerticalAlignment="Top" Width="75" Click="ExitButton_Click"/>

