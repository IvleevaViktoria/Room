        <Label Content="Периметр" HorizontalAlignment="Left" Margin="101,189,0,0" VerticalAlignment="Top"/>
        <Label Content="Площадь" HorizontalAlignment="Left" Margin="101,220,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.553,0.077"/>
        <Label Content="Метраж" HorizontalAlignment="Left" Margin="101,251,0,0" VerticalAlignment="Top"/>
