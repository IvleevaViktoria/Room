            <Label x:Name="LabelLength1" Content="" HorizontalAlignment="Left" Margin="179,48,0,0" VerticalAlignment="Top" Width="109"/>
            <Label x:Name="LabelWidth1" Content="" HorizontalAlignment="Left" Margin="179,79,0,0" VerticalAlignment="Top" Width="109"/>
            <Label x:Name="LabelNumPerson1" Content="" HorizontalAlignment="Left" Margin="179,120,0,0" VerticalAlignment="Top" Width="109"/>
            <Label x:Name="LabelPerimetr1" Content="" HorizontalAlignment="Left" Margin="179,146,0,0" VerticalAlignment="Top" Width="109"/>
            <Label x:Name="LabelArea1" Content="" HorizontalAlignment="Left" Margin="179,177,0,0" VerticalAlignment="Top" Width="109"/>
            <Label x:Name="LabelPersonArea1" Content="" HorizontalAlignment="Left" Margin="179,208,0,0" VerticalAlignment="Top" Width="109"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="274" Margin="402,44,0,0" VerticalAlignment="Top" Width="318" Background="#FFB9FFA5">
            <Label Content="Вторая комната" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <Label Content="Длина" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
            <Label Content="Ширина" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top"/>
            <Label Content="Число человек" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top"/>
            <Label Content="Периметр" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top"/>
            <Label Content="Площадь" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.553,0.077"/>
            <Label Content="Метраж" HorizontalAlignment="Left" Margin="10,209,0,0" VerticalAlignment="Top"/>
            <Label x:Name="LabelPerimetr2" Content="" HorizontalAlignment="Left" Margin="179,146,0,0" VerticalAlignment="Top" Width="109"/>
            <Label x:Name="LabelArea2" Content="" HorizontalAlignment="Left" Margin="179,177,0,0" VerticalAlignment="Top" Width="109"/>
            <Label x:Name="LabelPersonArea2" Content="" HorizontalAlignment="Left" Margin="179,208,0,0" VerticalAlignment="Top" Width="109"/>
            <TextBox x:Name="TBLength2" HorizontalAlignment="Left" Height="23" Margin="179,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TBWidth2" HorizontalAlignment="Left" Height="23" Margin="179,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="TBNumPerson2" HorizontalAlignment="Left" Height="23" Margin="179,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        </Grid>
        <Label Content="Длина" HorizontalAlignment="Left" Margin="101,92,0,0" VerticalAlignment="Top"/>
        <Label Content="Ширина" HorizontalAlignment="Left" Margin="101,127,0,0" VerticalAlignment="Top"/>
